<form>
	<div class='ds-loader' id='ds-loader-member-manager'>
		<img src="icons/svg/clockwork.svg" alt='loading animation'>
		<h3>Loading User & Member Data</h3>
	</div>

	<div id='ds-form-member-manager' style='display: none'>
		<fieldset>
			<div class="form-group">
				<label for='user'>Select User</label>
				<select id='user' name="user" data-dtype="String">
					<option disabled selected value>Select User</option>
					{{#each users}}
						<option value="{{this.id}}">{{this.name}}</option>
					{{/each}}
				</select>
			</div>
			
			<div class="form-group">
				<label class='ds-subtitle'>Select Character</label>
			</div>
			<div class="form-group ds-characters">
				{{#each actors}}
					<div class="ds-characters" data-id="{{this.id}}">
						<!--suppress HtmlFormInputWithoutLabel -->
						<input type="radio" name="{{this.id}}" id="{{this.id}}" data-dtype="Boolean"/>
						<span flow='left' ds-tooltip='{{this.name}}'><img src="{{this.img}}" /></span>
					</div>
				{{/each}}
			</div>
		</fieldset>
	</div>
</form>
